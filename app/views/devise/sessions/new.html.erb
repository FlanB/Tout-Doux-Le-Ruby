<nav class="d-flex justify-content-between align-items-center mb-4">
<h1> Connexion </h1>
<div>
<%= link_to "S'inscrire", new_user_registration_path, class:"btn btn-success" %>
<%= link_to "Retour", todos_path, class:"btn btn-danger" %>
</div>
</nav>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.input :email,
                label:"Adresse mail",
                required: true,
                autofocus: true,
                input_html: { autocomplete: "email" } ,
                input_html:{class:"mb-3"}, label_html:{class:"mb-2"} %>
    <%= f.input :password,
                label:'Mot de passe',
                required: true,
                input_html: { autocomplete: "current-password" },
                input_html:{class:"mb-3"}, label_html:{class:"mb-2"} %>
    <%= f.input :remember_me,label:"Se souvenir de moi",input_html:{class:"mb-3"}, label_html:{class:"mb-2"}, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions mb-3">
    <%= f.button :submit, "Connexion", class:'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

